<%- contentFor('body') %>

<!-- Centered bold, large "Send Content" -->
<h1 style="text-align: center; font-weight: bold; font-size: 36px; margin-bottom: 20px;">Send Content</h1>

<!-- Container centered and with padding at the top -->
<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; padding-top: 20px;">

    <!-- Form to upload text -->
    <form action="/upload/text" method="POST" style="margin-bottom: 30px;">
        <textarea name="text" placeholder="Enter description" rows="5" cols="50" required></textarea>
        <button type="submit" style="padding: 10px 20px; margin-top: 10px;">Upload Text</button>
    </form>


<!-- Form to upload files -->
<form action="/upload/file" method="POST" enctype="multipart/form-data" style="display: flex; flex-direction: column; align-items: center; gap: 10px; margin-top: 20px;">
    <input type="file" name="file" style="display: block; margin-bottom: 10px;" required>
    <button type="submit" style="padding: 10px 20px;">Upload File</button>
</form>
  
