<%- contentFor('body') %>
<link rel="stylesheet" href="/css/upload.css">
<h1 style="margin-top: 100px;">Send Content</h1>

<!-- Wrapper with data attributes for messages -->
<div id="messages-container"
    data-success-message="<%= successMessage || '' %>"
    data-error-message="<%= errorMessage || '' %>">
</div>

<div class="upload-container">
    <!-- Form to upload text -->
    <form action="/upload/combined" method="POST" enctype="multipart/form-data" id="combined-upload-form">
        <textarea name="text" placeholder="Enter description (optional)" rows="5"></textarea>
        <div id="drop-zone">
            <p>Drag files here or click to upload</p>
            <input type="file" name="files" id="file-input" multiple hidden>
        </div>
        <div id="file-list"></div>
        <button type="button" id="select-file-button">Select Files</button> 
        <button type="submit">Upload</button> 
    </form>
</div>

<script src="/js/upload.js"></script>
